/* pages/history/popup.wxss */

.index-popup{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.8);
    position: fixed;
    top: 0;
    left: 0;
}
.popup-box{
    width: 614rpx;
    padding-top: 148rpx;
    background: #fff;
    border-radius: 32rpx;
    margin: 235rpx auto 0;
    position: relative;
}
.popup-num{
    width:165rpx;
    height:165rpx;
    background: #67D5B8;
    border: 10rpx solid #fff;
    border-radius: 50%;
    position: absolute;
    top: -82.5rpx;
    left: 224.5rpx;
    text-align: center;
}
.popup-num-text{
    color: #fff;
    font-family: DIN Condensed;
    font-size: 90rpx;
    line-height:90rpx;
    margin-top: 25rpx;
}
.popup-num-unit{
    color: #fff;
    font-family: DIN Condensed;
    font-size: 26rpx;
 }
.popup-name{
    width: 379rpx;
    color: #698B89;
    font-size: 44rpx;
    text-align: center;
    line-height: 62rpx;
    margin: 0 auto 0;
}
.popup-btn-revise{
    width: 262rpx;
    height: 90rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    line-height: 90rpx;
    background: #67D5B8;
    border-radius: 50rpx;
}
.popup-btn-notake{
    color: #698B89;
    font-size: 32rpx;
    text-align: center;
    line-height: 42rpx;
    background: none;
}
button::after {
    border: 0;
}
