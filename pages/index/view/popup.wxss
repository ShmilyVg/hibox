/* pages/history/popup.wxss */

.index-popup{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.8);
    position: fixed;
    top: 0;
    left: 0;
}
.popup-box{
    width: 614rpx;
    padding-top: 148rpx;
    background: #fff;
    border-radius: 32rpx;
    margin: 235rpx auto 0;
    position: relative;
}
.popup-num{
    width:190rpx;
    height:190rpx;
    background: #67D5B8;
    border: 10rpx solid #fff;
    border-radius: 50%;
    position: absolute;
    top: -95rpx;
    left: 212rpx;
    text-align: center;
    /*line-height: 190rpx;*/
}
.popup-num-text{
    display: inline-block;
    vertical-align: top;
    color: #fff;
    font-size: 120rpx;
    line-height: 100rpx;
    margin-top: 45rpx;
}
.popup-num-unit{
    display: inline-block;
    vertical-align: top;
    color: #fff;
    font-size: 26rpx;
    margin-top: 45rpx;
 }
.popup-name{
    width: 379rpx;
    color: #698B89;
    font-size: 44rpx;
    text-align: center;
    line-height: 62rpx;
    margin: 0 auto 0;
}
.popup-btn-revise{
    width: 469rpx;
    height: 100rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    line-height: 100rpx;
    background: #67D5B8;
    border-radius: 50rpx;
    margin-top: 40rpx;
}
.popup-btn-notake{
    width: 469rpx;
    height: 100rpx;
    color: #698B89;
    font-size: 32rpx;
    text-align: center;
    line-height: 100rpx;
    background: none;
}
button::after {
    border: 0;
}
