            <view style="font-size: 20rpx;">box</view>
        </view>
        <image wx:if="{{false}}" src="../../images/medicine{{index+1}}.png" style="height: 90rpx;width: 90rpx;margin-top: 16rpx"></image>
        <view wx:else style="font-size: 40rpx;height: 90rpx;width: 90rpx;margin-top: 16rpx;text-align: center;line-height: 90rpx">ç©º</view>
