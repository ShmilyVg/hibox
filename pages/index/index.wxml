<!--index.wxml-->
<import src="./view/add-view.wxml" xmlns:wx="http://www.w3.org/1999/XSL/Transform"></import>
<import src="./view/medicine-view.wxml"></import>
<import src="./view/user-time-view.wxml"></import>

<view class="top-view">
    <view class="flex-row" style="justify-content: space-between;width: 100%">
        <view class="flex-row">
            <image src="{{userInfo.headUrl}}" class="avatar"></image>
            <view style="margin-left: 30rpx;color: white;">
                <view style="font-size: 40rpx">我的药盒</view>
                <view style="font-size: 30rpx">连接中</view>
            </view>
        </view>
        <image src="../../images/set.png" class="set" bindtap="toSet"></image>
    </view>
</view>

<view class="flex-row top-add">
    <template is="add-view" wx:for="{{4}}" data-index="{{index}}" data="{{boxColor,index}}"></template>
</view>

<view class="flex-column" style="position: absolute;top: 576rpx;width: 100%">
    <template is="user-time-view"></template>
    <template is="medicine-view" wx:for="{{list}}" data="{{index,item,boxColor}}"></template>
</view>

