/* pages/connect-device/connect-device.wxss */

.background-view {
    padding-top: 120rpx;
    align-items: center;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    position: fixed;
}

.title-first{
    height:84rpx;
    font-size:60rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:84rpx;
}

.title-second{
    margin-top: 2rpx;
    height:42rpx;
    font-size:30rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:42rpx;
}

.text-bottom{
    height:28rpx;
    font-size:20rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:28rpx;
    margin-top: 70rpx;
}

.flicker{
    position: absolute;
    width: 346rpx;
    height: 91rpx;
    top: 0;
    left: 0;
}



.title-text{
    font-size:60rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:84rpx;
}

.content-num{
    width:54rpx;
    height:31rpx;
    background:rgba(255,255,255,1);
    border-radius:18rpx;
    text-align: center;
    line-height: 31rpx;
    color: #45BEB0;
    font-size: 26rpx;
}

.content-text{
    margin-left: 25rpx;
    font-size:30rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
}

.content-line{
    width: 100%;
    height: 2rpx;
    background-color: white;
}

.btn{
    position: fixed;
    bottom: 82rpx;
    color: #48C0B1;
    background-color: white;
}

.bg{
    padding:120rpx 70rpx;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(#66DABF, #008290);
}